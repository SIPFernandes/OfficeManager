@if(_isModalOpen)
{
    <div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);"
     aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@_title</h4>
                    <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                </div>
                <div class="modal-body">
                    @_content
                </div>
                <div class="modal-footer">
                    @switch (_modalType)
                    {
                        case ModalDialogEnum.OkCancel:
                            <button type="button" class="btn" @onclick="@ModalCancel">Cancel</button>
                            <button type="button" class="btn btn-primary" @onclick=@ModalOk>OK</button>
                            break;
                        case ModalDialogEnum.DeleteCancel:
                            <button type="button" class="btn" @onclick="@ModalCancel">Cancel</button>
                            <button type="button" class="btn btn-danger" @onclick=@ModalOk>Delete</button>
                            break;
                        case ModalDialogEnum.YesNo:
                            <button type="button" class="btn" @onclick="@ModalCancel">No</button>
                            <button type="button" class="btn btn-primary" @onclick=@ModalOk>Yes</button>
                            break;
                        case ModalDialogEnum.Ok:
                            <button type="button" class="btn btn-primary" @onclick=@ModalOk>OK</button>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
}