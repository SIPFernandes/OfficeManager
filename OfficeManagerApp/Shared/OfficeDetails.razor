<EditForm EditContext="@_officeEditContext">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label class="control-label">@ConstEN.Company</label>
        <input class="form-control" readonly="readonly" @bind="CompanyName" />
    </div>

    <div class="form-group">
        <label class="control-label">@ConstEN.Name</label>
        <InputText class="form-control" @bind-Value="@OfficeRequestModel.Name" />
        <ValidationMessage For=@(() => OfficeRequestModel.Name) />
    </div>

    <div class="form-group">
        <label class="control-label">@ConstEN.Image</label>
        <ImageUpload MaxAllowedFiles="1" ImageSources=@_imageSources IsMultiple=false ImageSourcesChanged=@OnUploadImageChanged />
    </div>

</EditForm>
